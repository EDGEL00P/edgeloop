# EdgeLoop Environment Variables
# Copy to .env.local and fill in values

# =============================================================================
# REQUIRED - Application Core
# =============================================================================

# App URL (used for SEO, sitemap, canonical URLs)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# REQUIRED - Authentication (Clerk)
# =============================================================================

# Get from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk URLs (optional - defaults are fine for most cases)
# NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/signin
# NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/signup

# =============================================================================
# REQUIRED - Database
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/edgeloop

# =============================================================================
# OPTIONAL - External APIs
# =============================================================================

# Sports data provider
BALLDONTLIE_API_KEY=

# Odds data provider
ODDS_API_KEY=

# =============================================================================
# OPTIONAL - Analytics & Monitoring
# =============================================================================

# Axiom (logging/observability)
AXIOM_TOKEN=
AXIOM_ORG_ID=
AXIOM_DATASET=edgeloop

# Sentry (error tracking)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# OPTIONAL - Rate Limiting (Upstash)
# =============================================================================

# Get from: https://console.upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# =============================================================================
# OPTIONAL - AI/ML Features
# =============================================================================

# OpenAI API key for AI-powered features
OPENAI_API_KEY=sk-...

# Google Gemini API key
GOOGLE_AI_API_KEY=

# =============================================================================
# DEPLOYMENT - Vercel (set in Vercel dashboard, not here)
# =============================================================================

# These are auto-set by Vercel, do not add to .env files:
# - VERCEL_URL
# - VERCEL_ENV
# - VERCEL_GIT_COMMIT_SHA
