{
  "name": "edgeloop",
  "version": "2.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@edgeloop/web",
    "dev:server": "turbo run dev --filter=@edgeloop/server-app",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "vitest run --coverage",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @edgeloop/db db:generate",
    "db:migrate": "pnpm --filter @edgeloop/db db:migrate",
    "db:push": "pnpm --filter @edgeloop/db db:push",
    "db:studio": "pnpm --filter @edgeloop/db db:studio",
    "db:seed": "pnpm --filter @edgeloop/db db:seed",
    "worker": "pnpm --filter @edgeloop/jobs worker",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@playwright/test": "^1.58.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.0.0",
    "prettier": "^3.8.1",
    "turbo": "^2.4.0",
    "typescript": "^5.6.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "drizzle-orm": "^0.38.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
