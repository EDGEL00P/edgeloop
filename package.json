{
  "name": "edgeloop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:generate": "pnpm --filter @edgeloop/db db:generate",
    "db:migrate": "pnpm --filter @edgeloop/db db:migrate",
    "db:studio": "pnpm --filter @edgeloop/db db:studio",
    "db:seed": "tsx scripts/seed.ts"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.9.3",
    "tsx": "^4.19.2"
  },
  "engines": {
    "node": "24.x",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
