# EdgeLoop 2026 Environment Configuration
# Copy this file to .env.local and fill in the values

# ============================================
# Server Configuration
# ============================================
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
SHUTDOWN_GRACE_MS=5000

# ============================================
# Next.js / Vercel
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
VERCEL_URL=

# ============================================
# Database (Choose one)
# ============================================
# PostgreSQL (Supabase/Neon)
DATABASE_URL=postgresql://user:password@localhost:5432/edgeloop

# MySQL (PlanetScale)
# DATABASE_URL=mysql://user:password@localhost:3306/edgeloop

# ============================================
# Edge Cache (Upstash Redis)
# ============================================
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ============================================
# AI/ML Provider APIs
# ============================================
# OpenAI (for explanation synthesis)
OPENAI_API_KEY=

# Anthropic Claude (for explanation synthesis)
ANTHROPIC_API_KEY=

# Google Gemini (optional)
GOOGLE_AI_API_KEY=

# ============================================
# Sports Data APIs
# ============================================
# The Odds API (for live odds)
THE_ODDS_API_KEY=

# ESPN API (unofficial)
ESPN_API_BASE=https://site.api.espn.com/apis

# ============================================
# Authentication (Optional)
# ============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# OAuth providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# Observability
# ============================================
# Sentry
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=edgeloop

# ============================================
# Deployment Tokens
# ============================================
# Vercel
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Railway
RAILWAY_TOKEN=

# Codecov
CODECOV_TOKEN=

# ============================================
# MCP Server Configuration
# ============================================
# Repository path for MCP servers
EDGELOOP_REPO_PATH=/path/to/your/edgeloop/repository

# GitHub MCP Server (optional)
GITHUB_TOKEN=
